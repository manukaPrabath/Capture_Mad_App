<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="es.hol.connectier.madapp.MainActivity"
    android:background="@drawable/backgroud_img1"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"></LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="170dp">

            <TextView
                android:text="CAPTURE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:textColor="@android:color/background_light"
                android:textAlignment="center"
                android:textSize="40dp" />

            <TextView
                android:text="Memories for a life"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:paddingBottom="50px"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="0dp"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:paddingLeft="10px">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:background="@drawable/border"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:hint="username"
            android:drawablePadding="@dimen/activity_vertical_margin"
            android:drawableLeft="@mipmap/ic_perm_identity_white_24dp"
            android:id="@+id/email"
            android:fontFamily="sans-serif-smallcaps" />

        <EditText
            android:layout_marginTop="2dp"
            android:hint="password"
            android:drawablePadding="@dimen/activity_vertical_margin"
            android:layout_marginBottom="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/pass"
            android:background="@drawable/border"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:drawableLeft="@mipmap/ic_lock_outline_white_24dp"
            android:fontFamily="sans-serif-smallcaps" />

        <Button
            android:text="Sign in"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/signin_btn"
            android:background="@color/blue_login"
            android:textColor="@android:color/background_light"
             />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <TextView

                android:text="Create a new account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/reg_btn"
                android:textAlignment="textEnd"
                android:layout_weight="1"
                android:textColor="@color/white" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:layout_marginTop="20dp">

            <TextView
                android:text="Capture and store your breath taking moments with our application"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/orsignin"
                android:textColor="@color/white"
                android:layout_weight="2" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>

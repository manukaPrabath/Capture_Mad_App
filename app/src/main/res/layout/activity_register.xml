<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:scrollbars="none"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="es.hol.connectier.madapp.register"
    android:background="@drawable/backgroud_img1"
    >


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="12">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:paddingBottom="150px"></LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="8">

                <TextView
                    android:text="CAPTURE"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView2"
                    android:textColor="@android:color/background_light"
                    android:textAlignment="center"
                    android:textSize="40dp"
                    />

                <TextView
                    android:text="Memories for a life"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView7"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:paddingBottom="50px"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="300dp">



            <EditText
                android:layout_width="match_parent"
                android:layout_marginLeft="10px"
                android:layout_marginRight="10px"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:background="@drawable/border"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:hint="Email"
                android:drawablePadding="@dimen/activity_vertical_margin"
                android:drawableLeft="@mipmap/ic_mail_outline_white_24dp"
                android:id="@+id/email"
                android:drawableTint="@color/light_grey"
                android:fontFamily="sans-serif-smallcaps"
                android:paddingLeft="10dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:layout_marginRight="10px"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:background="@drawable/border"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:hint="Full Name"
                android:drawablePadding="@dimen/activity_vertical_margin"
                android:drawableLeft="@mipmap/ic_perm_identity_white_24dp"
                android:id="@+id/fullname"
                android:drawableTint="@color/light_grey"
                android:fontFamily="sans-serif-smallcaps"
                android:paddingLeft="10dp" />

            <EditText
                android:layout_marginTop="2dp"
                android:hint="password"
                android:layout_marginLeft="10px"
                android:layout_marginRight="10px"
                android:drawablePadding="@dimen/activity_vertical_margin"
                android:layout_marginBottom="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/password"
                android:background="@drawable/border"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:drawableLeft="@mipmap/ic_lock_outline_white_24dp"
                android:drawableTint="@color/light_grey"
                android:fontFamily="sans-serif-smallcaps"
                android:paddingLeft="10dp" />
            <EditText

                android:layout_marginTop="2dp"
                android:layout_marginLeft="10px"
                android:layout_marginRight="10px"
                android:hint="Confirm password"
                android:drawablePadding="@dimen/activity_vertical_margin"
                android:layout_marginBottom="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/cpassword"
                android:background="@drawable/border"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:drawableLeft="@mipmap/ic_lock_outline_white_24dp"
                android:drawableTint="@color/light_grey"
                android:fontFamily="sans-serif-smallcaps"
                android:paddingLeft="10dp" />

            <CheckBox
                android:text="I agree to connectier terms and conditions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/terms"
                android:textColor="@color/white"/>

            <Button
                android:text="Sign in"
                android:layout_marginLeft="10px"
                android:layout_marginRight="10px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/register_btn"
                android:background="@color/blue_login"
                android:textColor="@android:color/background_light" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2">

                <TextView
                    android:layout_marginLeft="15px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/haveaccount"
                    android:textAlignment="textStart"
                    android:text="Already have an account?"
                    android:textColor="@android:color/background_light"
                    android:layout_weight="1"
                    android:paddingTop="20px"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:layout_marginTop="20dp">

            <TextView
                android:text="Capture and store your breath taking moments with our application"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/orsignin"
                android:textColor="@color/white"
                android:layout_weight="2" />
        </LinearLayout>




    </LinearLayout>
</ScrollView>
